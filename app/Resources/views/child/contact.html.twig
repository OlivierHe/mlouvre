{# app/Resources/views/child/contact.html.twig #}
{% extends 'base.html.twig' %}

{% block breadcrumb %}
<ol class="breadcrumb">
  <li> <a href="/{{ app.request.locale }}">
    <i class="glyphicon glyphicon-home"></i>&nbsp;{{ "Accueil" | trans}}</a></li>
    <li class="active"><a href="/nous_contacter">{{ "Nous contacter" | trans }}</a></li>
</ol>
    

{% endblock %}

{% block section %}
    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            {% for msg in app.session.flashBag.get('success') %}
               <b> {{ msg }} </b>
            {% endfor %}
        </div>
    {% endif %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
    <input type="submit" class="btn btn-primary marge-btn" value="{{ "Envoyer" | trans}}"/>
    {{ form_end(form) }}
{% endblock %}